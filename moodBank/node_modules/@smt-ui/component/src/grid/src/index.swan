<view class="grid-container">
    <block s-for="item in dataList">
        <view class="{{type === 'vertical' ? 'grid-wrap' : 'row-grid-wrap smt-flex-box'}} {{hasBorder && 'smt-border-bottom-retain-inner'}} {{isIos ? '' : 'android'}}">
            <view
                s-for="v in item"
                class="{{type === 'vertical' ? 'grid-item smt-flex-column-box' : 'row-grid-item smt-flex-center-box'}} s-col--{{24 / col}} smt-item-class {{disable ? '' : 'smt-hover-class'}} {{hasSeparateLine ? 'line' : ''}} {{isIos ? '' : 'android'}}"
                data-info="{{v}}"
                bind:tap="clickHld"
            >
                <view class="{{type === 'vertical' ? 'smt-flex-column-box' : 'smt-inline-flex-box'}}">
                    <smt-image-item
                        image-border="{{imageBorder}}"
                        image-height="{{type === 'vertical' ? 65.217 : 36.232}}"
                        image-width="{{type === 'vertical' ? 65.217 : 36.232}}"
                        border-radius="{{imgBorderRadius}}"
                        image-src="{{v.imgSrc}}"
                        s-if="{{v.imgSrc}}"
                    />
                    <view s-if="{{v.title}}" class="title smt-line-clamp-1 smt-title-class">{{v.title}}</view>
                    <view s-if="{{v.subTitle && type === 'vertical'}}" class="sub-title smt-line-clamp-1 smt-sub-title-class">{{v.subTitle}}</view>
                </view>
            </view>
        </view>
    </block>
</view>

