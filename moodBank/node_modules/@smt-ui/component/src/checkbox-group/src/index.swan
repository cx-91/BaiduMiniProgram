<view class="check-box-group-wrapper checkbox-group-class">
    <view
        s-for="items, index in currRowOptions"
        class="row {{index === 0 ? 'first-line' : ''}}"
    >
        <smt-checkbox
            style="display: flex;flex:1;"
            s-for="item, idx in items"
            check-box-class="check-box {{idx === item.length - 1 ? 'last' : ''}}"
            column="{{column}}"
            checked="{{item.checked}}"
            value="{{item.value}}"
            bindchange="itemChange"
            item-style="{{itemStyle}}"
            icon-style="{{iconStyle}}"
            disabled="{{item.disabled || false}}"
            bindclick="clkHdl"
            active-icon-color="{{activeIconColor}}"
            active-text-color="{{activeTextColor}}"
            active-bg-color="{{activeBgColor}}"
        >
            <view
                class="item-title
                    {{item.disabled ? 'item-desc-disabled' : ''}}
                    {{column == 2 ? 'two-column' : 'three-column'}}">
                {{item[optionKey]}}
            </view>
            <view class="{{item.disabled ? 'item-desc-disabled' : ''}} {{column == 2 ? 'two-column' : 'three-column'}}" slot="desc" s-if="item.desc">
                {{item.desc}}
            </view>
        </smt-checkbox>
    </view>
</view>