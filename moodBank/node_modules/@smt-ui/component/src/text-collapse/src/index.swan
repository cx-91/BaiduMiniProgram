<view class="text-collapse text-collapse-class {{show ? 'show' : ''}}">
    <text
        class="
            {{ellipsis ? 'ellipsis' : ''}}
            {{currentExpand ? 'expand' : ''}}
            text-content
            text-content-class
        "
        style="-webkit-line-clamp: {{line}}"
        selectable="{{selectable}}"
    >
        {{text}}
    </text>
    <view class="btn">
        <view s-if="ellipsis && showButton"
            class="btn-text btn-text-class"
            hover-class="btn-hover-feedback"
            hover-stay-time="{{240}}"
            bind:tap="btnClick"
            >
                {{buttonText[currentExpand ? 1 : 0]}}
        </view>
    </view>
</view>