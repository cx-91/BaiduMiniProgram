<view class="
        filter-header-wrapper
        filter-header-class
        {{border ? 'has-border' : ''}}
        {{isIos ? '' : 'android-patch'}}
    "
>
    <view class="
            filter-header-inner
            {{'col-' + filtersValue.length}}
            {{isIos ? '' : 'android-patch'}}
        "
    >
        <view
            s-for="btn, idx in filtersValue"
            class="
                btn
                filter-btn-class
                {{idx === filterIdx ? 'expand' : ''}}
                {{!selected[idx] ? 'selected' : ''}}
                {{selections[idx].highlight === false ? 'discolor filter-discolor' : ''}}
            "
            data-index="{{idx}}"
            bind:tap="btnHdl"
        >
            <text class="btn-text filter-btn-text-class"
                style="max-width: {{textWidths[idx]}};color: {{selections[idx].highlight === false ? disColor : ((idx === filterIdx || !selected[idx]) ? activeColor : fontColor)}}"
            >
                {{
                    (
                        cmptFiltersValue[idx].value === selections[idx].value ? selections[idx].text : cmptFiltersValue[idx].text
                    )
                    || selections[idx].text
                }}
            </text>
            <gov-icon
                class="filter-arrow"
                name="arrow-up-o"
                color="{{selections[idx].highlight === false ? iconColor : ((idx === filterIdx || !selected[idx]) ? activeColor : iconColor)}}"
                size="25.36rpx"
            ></gov-icon>
        </view>
    </view>
</view>